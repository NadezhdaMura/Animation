<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainTag"
    android:background="@drawable/egypt">
    <Button
        android:id="@+id/startGame"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="@color/purple_700"
        android:text="Start Game"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:text="Shuffle"/>
    <Button
        android:id="@+id/refresh"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:text="refresh"/>
    <Button
        android:id="@+id/Reset"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:text="Reset"/>

    <ImageView
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:background="@drawable/pic1"
        android:layout_marginStart="30dp"
        android:src="@drawable/pic3"/>
    <ImageView
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:background="@drawable/pic2"
        android:layout_marginStart="140dp"
        android:src="@drawable/pic2"/>
    <ImageView
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:background="@drawable/pic3"
        android:layout_marginStart="250dp"
        android:src="@drawable/pic1"/>
    <ImageView
        android:id="@+id/view4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:background="@drawable/pic6"
        android:layout_marginStart="28dp"
        android:src="@drawable/pic4"/>
    <ImageView
        android:id="@+id/view5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/pic5"
        android:src="@drawable/pic5"/>
    <ImageView
        android:id="@+id/view6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/pic4"
        android:src="@drawable/pic6"/>


</RelativeLayout>